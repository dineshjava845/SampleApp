<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/bo" />


        <LinearLayout
            android:id="@+id/detailsL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/pic4"
            android:layout_toRightOf="@+id/pic4"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/uname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bo"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:text="7:46 pm" />
            </LinearLayout>
            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester United vs Arsenal starts in half an hour. What's your prediction?"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingLeft="6dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/predictionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manchester United"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="6dp"/>
                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="6dp"/>
                <TextView
                    android:id="@+id/predictionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arsenal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="6dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/forTeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:text="Ram, jhon predicted that Arsenal will win against Manchester United."/>
            <LinearLayout
                android:id="@+id/forAPics"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <ImageButton
                    android:id="@+id/forA1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anand"/>

                <ImageButton
                    android:id="@+id/forA2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/vishwa"/>

            </LinearLayout>
            <TextView
                android:id="@+id/forTeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:text="vishwaswaroop, mikaelsilvestre predicted that Manchester United will win against Arsenal."/>
            <LinearLayout
                android:id="@+id/forBPics"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <ImageButton
                    android:id="@+id/forB1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anand"/>

                <ImageButton
                    android:id="@+id/forB2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/vishwa"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>