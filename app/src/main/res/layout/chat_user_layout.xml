<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/feed1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/date1Layout"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/anand" />

    <LinearLayout
        android:id="@+id/detailsL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/pic1"
        android:layout_toRightOf="@+id/pic1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="7:46 pm" />

        </LinearLayout>
        <TextView
            android:id="@+id/fname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@bo what time is #manuvsars"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingLeft="6dp"/>
    </LinearLayout>
</RelativeLayout>