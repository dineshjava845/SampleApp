<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wizardBlue">

    <LinearLayout
        android:id="@+id/pageindicator"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/imgInactivePage0"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_page"
            android:contentDescription="@string/walkthrough1"
            android:padding="2dp"
            />
        <ImageView
            android:id="@+id/imgActivePage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/active_page"
            android:contentDescription="@string/walkthrough1"
            android:padding="2dp"
            />
        <ImageView
            android:id="@+id/imgInactivePage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/inactive_page"
            android:contentDescription="@string/walkthrough1"
            android:padding="2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/swiper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pageindicator"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="@color/white"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/lblWalkthrough1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walkthrough1"
        android:layout_above="@+id/swiper"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="30dp"
        android:id="@+id/wireFrame1"
        android:layout_above="@+id/lblWalkthrough1"/>

</RelativeLayout>