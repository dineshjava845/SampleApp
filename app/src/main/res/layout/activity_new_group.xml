<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white"
    tools:context="com.boutline.sports.activity.MembersActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/newGroupActivityToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="?attr/actionBarSize">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/leftMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back_black" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:id="@+id/newGroupToolbarTextView"
        android:text="@string/create_new_group"/>
    <TextView
        android:id="@+id/donebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="end"
        android:paddingRight="20dp"
        android:textColor="@color/black"/>
</android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/hrline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_below="@id/newGroupActivityToolbar"/>
    <LinearLayout
        android:id="@+id/groupNameLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hrline">
        <TextView
            android:id="@+id/groupNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/groupNameEditText"
            style="@style/Theme.Form"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/emailLabel"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:hint="@string/group_name_hint"
            android:inputType="textEmailAddress"
            android:textColorHint="#CDCDCD"
            android:textCursorDrawable="@null"/>
    </LinearLayout>
    <View
        android:id="@+id/hrline2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_below="@id/groupNameLayout"/>
    <TextView
        android:id="@+id/groupTagsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose group tags"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_below="@id/hrline2"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/groupTagsLabel"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_below="@id/textLayout"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/searchtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/edittext_bottom_border"
                    android:imeOptions="actionSearch"
                    android:drawableLeft="@drawable/ic_action_search"
                    android:textSize="12sp"
                    android:hint="@string/searchtags"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/tagContainer"
                android:layout_below="@id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <com.boutline.sports.models.TagView
                    android:id="@+id/tagview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:lineMargin="5dp"
                    app:tagMargin="3dp"
                    app:textPaddingBottom="8dp"
                    app:textPaddingLeft="15dp"
                    app:textPaddingRight="15dp"
                    app:textPaddingTop="8dp">
                </com.boutline.sports.models.TagView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>